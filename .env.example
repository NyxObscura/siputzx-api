# Server
PORT=8080
BASE_URL=https://api.siputzx.my.id
ROUTER_PATH=router

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-address>/?retryWrites=true&w=majority&appName=<appName>

# Discord Bot
DISCORD_BOT_TOKEN=<your-discord-bot-token>
DISCORD_CHANNEL_ID=<your-discord-channel-id>

# Cloudflare Turnstile
TURNSTILE_SECRET_KEY=<your-turnstile-secret-key>
TURNSTILE_VERIFY_URL=https://challenges.cloudflare.com/turnstile/v0/siteverify

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<your-email@example.com>
SMTP_PASS=<your-email-password>

# Midtrans
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_SERVER_KEY=<your-midtrans-server-key>
MIDTRANS_CLIENT_KEY=<your-midtrans-client-key>

# Security - Rate Limiting
RATE_LIMIT_WINDOW_MS=3000
RATE_LIMIT_MAX_REQUESTS=6
RATE_LIMIT_COOLDOWN_MS=10000
BURST_THRESHOLD=50
SUSPICIOUS_THRESHOLD=100

# Security - Anti Spam
ANTI_SPAM_ENABLED=true
SIMILARITY_THRESHOLD=0.8
IP_REPUTATION_ENABLED=true

# Security - DDoS Protection
DDOS_PROTECTION_ENABLED=true
MAX_CONNECTIONS_PER_IP=100
BLOCK_DURATION=300000
